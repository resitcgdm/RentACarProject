@{
    Layout = "_Layout";
}
@model CartSummaryViewModel
<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay innerpage" style="background-image: url('../images/hero_2.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1>Cart Summary</h1>
                    <a href="/Home/Cars" class="btn btn-primary">Keep going to buy</a>
                </div>
            </div>
        </div>
    </div>
</div>


            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>CarName</th>
                      
                        <th>Price</th>
                        <th>Rent Date</th>
                      
                        <th>Remove from Cart</th>
                    </tr>
                </thead>
                @foreach (var item in Model.Cart.CartLines)
                {


                    <tbody class="align-middle">
                        <tr>
                            <td class="align-middle"> @item.Car.CarName</td>
               
                            <td class="align-middle">$@item.Car.DailyPrice</td>
                            <td class="align-middle">
                              @item.Car.RentDate
                            </td>
                           
                            <td class="align-middle"><a asp-action="DeleteFromCart" asp-controller="Cart" asp-route-carId="@item.Car.CarId" class="btn btn-sm btn-danger">x</a></td>
                        </tr>


                    </tbody>
                }
            </table>
        @if (TempData["message"] != null)
            {
                 <div class="alert alert-info" role="alert">@TempData["message"]</div>
            }
            <div class="d-none">
                @foreach (var item in Model.Cart.CartLines)
                {
                    @Model.Cart.Total
                }
            </div>
            <div class="col-lg-4 ml-auto">
                <div class="bg-white p-3 p-md-5">
                    <h3 class="text-black mb-4">Cart Info</h3>
                    <ul class="list-unstyled footer-link">
                        
                        <li class="d-block mb-3"><span>Total</span></li>
                        <li class="d-block mb-3"><span>@Model.Cart.Total</span></li>
                    </ul>
                </div>
            </div>
                
@*
        </div>
    </div>
</div>
